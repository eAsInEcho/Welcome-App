<UserControl x:Class="GFSetupWizard.App.Views.WelcomeStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Welcome to Your New Laptop!" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20"/>
                
                <TextBlock Text="Guide for New Employees" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#0077C8"
                           Margin="0,0,0,20"/>
                
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                    This guide helps you quickly and easily set up your new laptop by logging in to Windows, 
                    activating Microsoft 365 apps, and requesting VPN access.
                </TextBlock>
                
                <TextBlock Text="The wizard will guide you through the following steps:" 
                           FontWeight="SemiBold" 
                           Margin="0,10,0,10"/>
                
                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="• Setting up Microsoft OneDrive" Margin="0,5,0,5"/>
                    <TextBlock Text="• Configuring Microsoft Outlook" Margin="0,5,0,5"/>
                    <TextBlock Text="• Setting up Microsoft Teams" Margin="0,5,0,5"/>
                    <TextBlock Text="• Configuring Microsoft Edge" Margin="0,5,0,5"/>
                    <TextBlock Text="• Requesting your SecurID RSA Token for VPN" Margin="0,5,0,5"/>
                    <TextBlock Text="• Installing additional software" Margin="0,5,0,5"/>
                </StackPanel>
                
                <TextBlock TextWrapping="Wrap" Margin="0,20,0,0">
                    Click <Bold>Next</Bold> to begin the setup process.
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>