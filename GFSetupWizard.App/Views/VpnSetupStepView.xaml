<UserControl x:Class="GFSetupWizard.App.Views.VpnSetupStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="SecurID RSA Token for VPN" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20"/>
                
                <TextBlock Text="Request your SecurID RSA token for secure VPN access to company resources" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#E74C3C"
                           Margin="0,0,0,20"/>
                
                <Border Background="#FFEBEE" 
                        BorderBrush="#E74C3C" 
                        BorderThickness="1" 
                        Padding="15" 
                        Margin="0,0,0,20">
                    <TextBlock TextWrapping="Wrap" 
                               Foreground="#E74C3C" 
                               FontWeight="SemiBold">
                        IMPORTANT: You MUST connect to the GF network via VPN or physically in the office at least once every 90 days or your computer will LOCK!
                    </TextBlock>
                </Border>
                
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                    A SecurID RSA token is required to establish a secure VPN connection to the GlobalFoundries network.
                    This allows you to access internal resources when working remotely.
                </TextBlock>
                
                <Button x:Name="OpenServicePortalButton" 
                        Content="Open Service Portal" 
                        Click="OpenServicePortalButton_Click"
                        Background="#E74C3C"
                        Foreground="White"
                        Padding="15,10"
                        FontSize="14"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,30"/>
                
                <TextBlock Text="Request Steps:" 
                           FontWeight="SemiBold" 
                           Margin="0,10,0,10"/>
                
                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="1. Choose 'New RSA Token' as request type" Margin="0,5,0,5"/>
                    <TextBlock Text="2. Select your preferred operating system" Margin="0,5,0,5"/>
                    <TextBlock Text="3. Look for email instructions within 48 hours" Margin="0,5,0,5"/>
                </StackPanel>
                
                <TextBlock TextWrapping="Wrap" Margin="0,20,0,20">
                    If you need assistance, contact the Global Service Desk at:
                    <Run FontWeight="SemiBold">+1 518-305-4357</Run>
                </TextBlock>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="CompleteButton" 
                            Content="Yes, I've submitted my request" 
                            Click="CompleteButton_Click"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="15,10"
                            Margin="0,0,10,0"/>
                    
                    <Button x:Name="SkipButton" 
                            Content="I'll do this later" 
                            Click="SkipButton_Click"
                            Background="#9E9E9E"
                            Foreground="White"
                            Padding="15,10"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
