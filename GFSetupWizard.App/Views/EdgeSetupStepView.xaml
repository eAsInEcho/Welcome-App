<UserControl x:Class="GFSetupWizard.App.Views.EdgeSetupStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Microsoft Edge Setup" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20"/>
                
                <TextBlock Text="Configure Microsoft Edge browser settings and enable syncing" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#0078D7"
                           Margin="0,0,0,20"/>
                
                <!-- Status Panel -->
                <Border x:Name="StatusPanel" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        Padding="15" 
                        Margin="0,0,0,20" 
                        Background="#F5F5F5"
                        CornerRadius="4">
                    <StackPanel>
                        <TextBlock x:Name="StatusMessage" 
                                   Text="Checking Edge configuration..." 
                                   FontWeight="SemiBold" 
                                   TextWrapping="Wrap"/>
                        
                        <!-- Profile Details Panel (Hidden by default) -->
                        <Border x:Name="ProfileDetailsPanel" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                Padding="10" 
                                Margin="0,10,0,0" 
                                Background="White"
                                CornerRadius="4"
                                Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="Email:" 
                                           FontWeight="SemiBold" 
                                           Grid.Row="0" 
                                           Grid.Column="0" 
                                           Margin="0,0,10,5"/>
                                <TextBlock x:Name="ProfileEmail" 
                                           Text="" 
                                           Grid.Row="0" 
                                           Grid.Column="1" 
                                           Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Profile:" 
                                           FontWeight="SemiBold" 
                                           Grid.Row="1" 
                                           Grid.Column="0" 
                                           Margin="0,0,10,5"/>
                                <TextBlock x:Name="ProfileName" 
                                           Text="" 
                                           Grid.Row="1" 
                                           Grid.Column="1" 
                                           Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Sync:" 
                                           FontWeight="SemiBold" 
                                           Grid.Row="2" 
                                           Grid.Column="0" 
                                           Margin="0,0,10,0"/>
                                <TextBlock x:Name="SyncStatus" 
                                           Text="" 
                                           Grid.Row="2" 
                                           Grid.Column="1" 
                                           Margin="0,0,0,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
                
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                    Microsoft Edge is your primary web browser at GlobalFoundries.
                    Setting up Edge properly ensures your bookmarks, passwords, and preferences are synced across all your devices.
                </TextBlock>
                
                <!-- Button Stack Panel -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                    <Button x:Name="LaunchEdgeButton" 
                            Content="Launch Edge with Sync Settings" 
                            Click="LaunchEdgeButton_Click"
                            Background="#0078D7"
                            Foreground="White"
                            Padding="15,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Left"
                            Margin="0,0,10,0"/>
                    
                    <Button x:Name="CheckStatusButton" 
                            Content="Copy Sync Settings URL" 
                            Click="CheckStatusButton_Click"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="15,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Left"/>
                </StackPanel>
                
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,20" FontStyle="Italic">
                    Note: The "Launch Edge with Sync Settings" button will open Edge and automatically navigate to the sync settings page.
                    If that doesn't work, use the "Copy Sync Settings URL" button to copy the URL, then paste it into Edge's address bar.
                </TextBlock>
                
                <TextBlock TextWrapping="Wrap" Margin="0,20,0,20">
                    When Edge opens to the sync settings page, make sure you're signed in with your GlobalFoundries work account and that sync is enabled. This ensures your bookmarks, passwords, and preferences are synced across all your work devices.
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
